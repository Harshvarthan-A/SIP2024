// Program to find the largest of three number
#include <stdio.h>

int main()
{
     int a,b,c;
     
    printf("\nEnter a number :");
    scanf("%d",&a);
    printf("\nEnter a number :");
    scanf("%d",&b);
    printf("\nEnter a number :");
    scanf("%d",&c);
    
    if(a>b && a>c)
    {
         printf("\n%d is biggest number",a);
    }
    else if(b>a && b>c)
    {
         printf("\n%d is biggest number",b);
    }
    else
    {
         printf("\n%d is biggest number",c);
    }

    return 0;
}
